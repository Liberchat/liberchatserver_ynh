    },
    {
      "id": "liberchat",
      "name": "Liberchat",
      "packaging_format": 2,
      "version": "0.1.0",
      "description": {
        "en": "Self-hostable instance of Liberchat, a free and decentralized chat.",
        "fr": "Instance auto-hébergeable de Liberchat, un chat libre et décentralisé."
      },
      "url": "https://liberchat.net/",
      "license": "AGPL-3.0",
      "maintainer": [
        {
          "name": "TonNom",
          "email": "stp@tonemail.com"
        }
      ],
      "requirements": [
        {
          "type": "apt",
          "package": "nodejs"
        },
        {
          "type": "apt",
          "package": "npm"
        }
      ],
      "multi_instance": false,
      "services": ["liberchat"],
      "arguments": {
        "domain": {
          "type": "domain",
          "ask": {
            "en": "On which domain should the app be installed?",
            "fr": "Sur quel domaine installer l'application ?"
          },
          "example": "domain.tld"
        },
        "path": {
          "type": "path",
          "ask": {
            "en": "At which path should the app be installed?",
            "fr": "À quel chemin installer l'application ?"
          },
          "example": "/liberchat"
        },
        "admin": {
          "type": "user",
          "ask": {
            "en": "Which YunoHost user will be the administrator?",
            "fr": "Quel utilisateur YunoHost sera administrateur de l'application ?"
          }
        }
      },
      "permissions": {
        "main": {
          "url": "/",
          "allowed": ["all_users"],
          "show_tile": true,
          "label": {
            "en": "Access Liberchat",
            "fr": "Accéder à Liberchat"
          }
        }
      },
      "hooks": {
        "postinstall": "",
        "postuninstall": "",
        "prebackup": "",
        "postbackup": "",
        "prerestore": "",
        "postrestore": ""
      },
      "tags": ["chat", "decentralized", "nodejs"],
      "resources": {
        "sources": [
          {
            "url": "https://github.com/Liberchat/Liberchat-android"
          }
        ]
      }
    }
