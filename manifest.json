{
  "id": "liberchat",
  "name": "Liberchat",
  "packaging_format": 2,
  "description": {
    "en": "Self-hostable instance of Liberchat, a free and decentralized chat.",
    "fr": "Instance auto-hébergeable de Liberchat, un chat libre et décentralisé."
  },
  "version": "6.1.20~ynh1",
  "url": "https://github.com/AnARCHIS12/Liberchat",
  "upstream": {
    "license": "AGPL-3.0",
    "website": "https://liberchat.net/",
    "code": "https://github.com/AnARCHIS12/Liberchat"
  },
  "license": "AGPL-3.0",
  "maintainer": {
    "name": "Liberchat Team",
    "email": "contact@liberchat.net"
  },
  "requirements": {
    "yunohost": ">= 11.2"
  },
  "integration": {
    "yunohost": ">= 11.2",
    "architectures": "all",
    "multi_instance": true,
    "ldap": false,
    "sso": false,
    "disk": "50M",
    "ram": {
      "build": "50M",
      "runtime": "50M"
    }
  },
  "multi_instance": true,
  "services": ["nginx"],
  "arguments": {
    "install": [
      {
        "name": "domain",
        "type": "domain",
        "ask": {
          "en": "Choose a domain name for Liberchat",
          "fr": "Choisissez un nom de domaine pour Liberchat"
        },
        "example": "example.com"
      },
      {
        "name": "path",
        "type": "path",
        "ask": {
          "en": "Choose a path for Liberchat",
          "fr": "Choisissez un chemin pour Liberchat"
        },
        "example": "/liberchat",
        "default": "/liberchat"
      },
      {
        "name": "admin",
        "type": "user",
        "ask": {
          "en": "Choose an admin for this application",
          "fr": "Choisissez un administrateur pour cette application"
        }
      },
      {
        "name": "is_public",
        "type": "boolean",
        "ask": {
          "en": "Is it a public application?",
          "fr": "Est-ce une application publique ?"
        },
        "default": false
      }
    ]
  },
  "resources": {
    "sources": {
      "main": {
        "url": "https://github.com/AnARCHIS12/Liberchat/archive/refs/heads/main.tar.gz",
        "sha256": "auto"
      }
    },
    "system_user": {},
    "install_dir": {},
    "ports": {
      "main": {
        "default": 3000
      }
    },
    "permissions": {
      "main": {
        "url": "/",
        "allowed": "visitors"
      }
    },
    "apt": {
      "packages": ["nodejs", "npm"]
    }
  }
}